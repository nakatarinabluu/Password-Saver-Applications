<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ZeroKeep" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/surface_white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Black Icons -->
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/surface_white</item>
        <!-- Chameleon Trick: Set window background to Icon Blue to hide the square box -->
        <item name="android:windowBackground">@color/brand_royal_blue</item>
        <!-- Android 12+ Splash API -->
        <item name="android:windowSplashScreenBackground">@color/brand_royal_blue</item>
    </style>
</resources>
